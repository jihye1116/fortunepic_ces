{
  "name": "fortunepic_general",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "cross-env ELECTRON_DISABLE=true vite",
    "build": "tsc && vite build && electron-builder",
    "build:web": "cross-env ELECTRON_DISABLE=true tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@sglara/cn": "^1.0.0",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/react-router": "^1.134.9",
    "@tanstack/react-router-devtools": "^1.134.9",
    "axios": "^1.13.1",
    "html-to-image": "^1.11.13",
    "i18next": "^25.6.0",
    "jotai": "^2.15.1",
    "lottie-react": "^2.4.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.2.4",
    "tailwindcss": "^4.1.16",
    "vaul": "^1.1.2",
    "vite-plugin-svgr": "^4.5.0"
  },
  "devDependencies": {
    "@tanstack/router-plugin": "^1.134.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.1.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.hooaah.fortunepic",
    "productName": "FortunePic",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asarUnpack": [
      "dist/**/*"
    ],
    "win": {
      "icon": "public/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "entitlements": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "NSCameraUsageDescription": "Please give us access to your camera"
      }
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
